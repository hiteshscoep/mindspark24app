<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/random_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/team_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/white_bg_with_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Vaibhav Khating"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/team_img"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/team_img"
        app:layout_constraintTop_toBottomOf="@+id/team_img" />

    <TextView
        android:id="@+id/team_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Web &amp; App"
        android:textColor="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@+id/team_name"
        app:layout_constraintStart_toStartOf="@+id/team_name"
        app:layout_constraintTop_toBottomOf="@+id/team_name" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/team_name"
        app:layout_constraintStart_toStartOf="@+id/team_name"
        app:layout_constraintTop_toBottomOf="@+id/team_position"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/team_mail"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/gmail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/team_position" />

        <ImageView
            android:id="@+id/team_lin"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/linkin"
            android:layout_marginRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/team_position" />

        <ImageView
            android:id="@+id/team_insta"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/insta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/team_position" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>